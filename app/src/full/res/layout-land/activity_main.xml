<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="8"
    android:rowCount="6"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:background="@color/colorView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_rowWeight="5"
        android:layout_columnSpan="8"
        android:scrollbars="none">
        <TextView
            android:id="@+id/textView"
            android:overScrollMode="never"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="end|bottom"
            android:textAlignment="gravity"
            android:textSize="30sp" />
    </ScrollView>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_columnSpan="8"
        android:layout_height="0dp"
        android:layout_rowWeight="6"
        android:background="@color/colorView"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="35sp"
        android:singleLine="true"
        android:focusable="false"
        android:inputType="none|textNoSuggestions"
        android:importantForAutofill="no"
        android:hint="@string/_0"/>


    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/sin"
        android:textAllCaps="false"/>
    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/cos"
        android:textAllCaps="false"/>
    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/tan"
        android:textAllCaps="false"/>

    <Button
        style="@style/ButtonCommonStyle"
        android:background="@drawable/button_background"
        android:onClick="OnNumberClick"
        android:text="@string/_1" />

    <Button
        style="@style/ButtonCommonStyle"
        android:background="@drawable/button_background"
        android:onClick="OnNumberClick"
        android:text="@string/_2" />

    <Button
        style="@style/ButtonCommonStyle"
        android:background="@drawable/button_background"
        android:onClick="OnNumberClick"
        android:text="@string/_3" />

    <Button
        android:id="@+id/delB"
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/del" />

    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/clear"
        android:textColor="#FF5722" />

    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/ln"
        android:textAllCaps="false"/>

    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/lg"
        android:textAllCaps="false"/>

    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnNumberClick"
        android:background="@drawable/button_background"
        android:text="@string/e"
        android:textAllCaps="false"/>

    <Button
        style="@style/ButtonCommonStyle"
        android:background="@drawable/button_background"
        android:onClick="OnNumberClick"
        android:text="@string/_4" />

    <Button
        style="@style/ButtonCommonStyle"
        android:background="@drawable/button_background"
        android:onClick="OnNumberClick"
        android:text="@string/_5" />

    <Button
        style="@style/ButtonCommonStyle"
        android:background="@drawable/button_background"
        android:onClick="OnNumberClick"
        android:text="@string/_6" />

    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/left_bracket" />
    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/right_bracket" />


    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/pow"
        android:textAllCaps="false"/>

    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/mod" />


    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/fact"
        android:textAllCaps="false"/>

    <Button
        style="@style/ButtonCommonStyle"
        android:background="@drawable/button_background"
        android:onClick="OnNumberClick"
        android:text="@string/_7" />

    <Button
        style="@style/ButtonCommonStyle"
        android:background="@drawable/button_background"
        android:onClick="OnNumberClick"
        android:text="@string/_8" />

    <Button
        style="@style/ButtonCommonStyle"
        android:background="@drawable/button_background"
        android:onClick="OnNumberClick"
        android:text="@string/_9" />

    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/sqrt"
        android:textAllCaps="false"/>

    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/pi"
        android:textAllCaps="false"/>

    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/div" />

    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/mul" />


    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="@drawable/button_background"
        android:text="@string/sub" />

    <Button
        style="@style/ButtonCommonStyle"
        android:background="@drawable/button_background"
        android:onClick="OnOpClick"
        android:text="@string/sum" />


    <Button
        android:id="@+id/zero_button"
        style="@style/ButtonCommonStyle"
        android:background="@drawable/button_background"
        android:onClick="OnNumberClick"
        android:text="@string/_0" />

    <Button
        style="@style/ButtonCommonStyle"
        android:background="@drawable/button_background"
        android:onClick="OnOpClick"
        android:text="@string/dot" />

    <Button
        style="@style/ButtonCommonStyle"
        android:onClick="OnOpClick"
        android:background="#FF5722"
        android:layout_columnSpan="2"
        android:text="@string/equal"
        android:textColor="#FFFFFF" />


</GridLayout>